{
	"name": "pahanini/yii2-rest-doc",
	"description": "A Yii2 tool to create slate index.md for you REST controllers.",
	"keywords": ["yii2", "rest", "api", "doc", "slate"],
	"homepage": "https://github.com/pahanini/yii2-rest-to-slate",
	"type": "yii2-extension",
	"license": "BSD-3-Clause",
	"authors": [
		{
			"name": "Pavel Tetyaev",
			"email": "pahanini@gmail.com"
		}
	],
	"require": {
		"php": ">=7.1.0",
		"ext-curl": "*",
		"yiisoft/yii2": "*",
        "phpdocumentor/reflection": ">=3.0.0",
        "phpdocumentor/reflection-docblock": "~2.0"
    },
	"require-dev": {
		"roave/security-advisories": "dev-master",
		"phpunit/phpunit" : "6.*"
	},
	"replace": {
		"bower-asset/jquery": ">=1.11.0",
		"bower-asset/inputmask": ">=3.2.0",
		"bower-asset/punycode": ">=1.3.0",
		"bower-asset/yii2-pjax": ">=2.0.0"
	},
	"config": {
		"process-timeout": 1800,
		"discard-changes": true,
		"fxp-asset": {
			"installer-paths": {
				"npm-asset-library": "vendor/npm",
				"bower-asset-library": "vendor/bower"
			}
		}
	},
	"autoload": {
		"psr-4": {
			"pahanini\\restdoc\\": ""
		}
	}
}
